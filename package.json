{
	"name": "mongo-tab",
	"displayName": "Mongo Tab",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:appService.settings",
		"onCommand:appService.Refresh",
		"onCommand:appService.openCollection",
		"onFileSystem:mongoDBService",
		"onView:mongoDBService"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "appService.settings",
				"title": "Settings"
			},
			{
				"command": "appService.Refresh",
				"title": "Refresh",
				"category": "Mongo Tab",
				"icon": {
					"light": "resources/refresh.svg",
					"dark": "resources/refresh.svg"
				}
			},
			{
				"command": "appService.AddConnection",
				"title": "Add Connection",
				"category": "Mongo Tab",
				"icon": {
					"light": "resources/add.svg",
					"dark": "resources/add.svg"
				}
			},
			{
				"command": "appService.openCollection",
				"title": "Open Collection"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "mongo-tab",
					"title": "Mongo Tab",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"mongo-tab": [
				{
					"id": "mongoDBService",
					"name": "Mongo Database"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "appService.AddConnection",
					"when": "view == mongoDBService",
					"group": "navigation@1"
				},
				{
					"command": "appService.Refresh",
					"when": "view == mongoDBService",
					"group": "navigation@2"
				}
			],
			"view/item/context": [
				{
					"command": "appService.Refresh",
					"when": "view == azureAppService"
				}
			]
		},
		"configuration": {
			"title": "Mongo Tab",
			"properties": {
				"appService.hostName": {
					"type": "string",
					"default": "localhost",
					"description": "MongoDB connection host name"
				},
				"appService.hostPort": {
					"type": "string",
					"default": "20020",
					"description": "MongoDB connection host port"
				},
				"appService.username": {
					"type": "string",
					"default": "root",
					"description": "MongoDB connection username"
				},
				"appService.password": {
					"type": "string",
					"default": "password",
					"description": "MongoDB connection password"
				},
				"appService.database": {
					"type": "string",
					"default": "mongo",
					"description": "MongoDB connection database"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"fs": "0.0.1-security",
		"mongodb": "^3.5.9",
		"mongoose": "^5.9.19",
		"path": "^0.12.7"
	}
}
